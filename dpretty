#!/bin/bash

#DOCKER_OPTS="-v techskills_keyring:/root/.local/share/python_keyring"
DOCKER_IMAGE=dpretty

USER_DIR="$(pwd)"

SCRIPTDIR="$(dirname "$(readlink -fn "$0")")"
cd "$SCRIPTDIR"

if ! ./hide-short-output.sh podman build . -t $DOCKER_IMAGE; then
    echo "'podman build -t .' failed"
    exit 1
fi

podman run -it -v "${USER_DIR}:/user_dir" $DOCKER_IMAGE "$@" \
#       bash /dpretty.sh -g /user_dir -r '${upstream}..'
