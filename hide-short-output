#!/bin/bash

set -e
TIMEOUT=2
FLAGFILE=$(mktemp -p /tmp hso-flagfile-XXXX)
OUTFILE=$(mktemp -p /tmp hso-outfile-XXXX)

cleanup() {
    rm -f "$FLAGFILE"
    rm -f "$OUTFILE"
}
trap cleanup SIGINT SIGTERM EXIT

while getopts :t: OPT; do
    case $OPT in
        t)
            TIMEOUT="$OPTARG"
            ;;
        *)
            echo "Invalid option: -$OPTARG"
            exit 1
            ;;
    esac
done
shift $(expr $OPTIND - 1 )

monitor_for_exit() {
    local FLAGFILE="$1"; shift
    local OUTFILE="$1"; shift

    "$@" &> "$OUTFILE" || true
    rm -f "$FLAGFILE"
}

monitor_for_exit "$FLAGFILE" "$OUTFILE" "$@" &

ENDTIME=$[$(date +%s) + $TIMEOUT]
while [ -e $FLAGFILE -a $(date +%s) -lt $ENDTIME ]; do
    sleep 0.25
done

if [ -e "$FLAGFILE" ]; then
    tail -n +1 -f "$OUTFILE" &
    while [ -e "$FLAGFILE" ]; do sleep 0.25; done
fi

rm -f "$OUTFILE"
